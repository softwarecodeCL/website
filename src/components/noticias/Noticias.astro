---
import { getCollection, getEntryBySlug } from 'astro:content';
import Layout from '../../layouts/Layout.astro';

// ðŸ”¹ Obtener el parÃ¡metro del slug
const { slug } = Astro.params;

// ðŸ”¹ Cargar datos de la noticia
const noticia = await getEntryBySlug('noticias', slug);

if (!noticia) {
  throw new Error(`No se encontrÃ³ la noticia con el slug: ${slug}`);
}

// SEO dinÃ¡mico
const { title, description, coverImage, date } = noticia.data;
---

<Layout title={title} description={description}>

  <!-- ðŸ§  Metatags para SEO y redes sociales -->
  <head>
    <meta name="description" content={description} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={coverImage} />
    <meta property="og:type" content="article" />
    <meta property="article:published_time" content={date} />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={coverImage} />
  </head>

  <!-- ðŸ“° Cuerpo del artÃ­culo -->
  <article class="container py-5">
    <header class="mb-4">
      <h1 class="fw-bold">{title}</h1>
      <p class="text-muted">{new Date(date).toLocaleDateString('es-CL', { year: 'numeric', month: 'long', day: 'numeric' })}</p>
      <img src={coverImage} alt={title} class="img-fluid rounded my-4" />
    </header>

    <section class="content" set:html={noticia.body} />
  </article>

  <style>
    article {
      max-width: 768px;
      margin: auto;
    }

    h1 {
      font-size: 2.25rem;
    }

    .content p {
      font-size: 1.125rem;
      line-height: 1.8;
      margin-bottom: 1.25rem;
    }

    .content img {
      max-width: 100%;
      height: auto;
      margin: 2rem 0;
    }

    .content h2, .content h3 {
      margin-top: 2rem;
      margin-bottom: 1rem;
      font-weight: bold;
    }
  </style>

</Layout>
