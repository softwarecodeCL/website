---
const { type = 'info', icon = 'ðŸ’¡', title } = Astro.props
const colors = {
  info: 'rgba(37,99,235,.08)',
  success: 'rgba(16,185,129,.10)',
  warning: 'rgba(245,158,11,.12)',
  danger: 'rgba(239,68,68,.10)'
}
---
<div
  style={`
    background:${colors[type]};
    border-left:5px solid currentColor;
    padding:1.2rem 1.4rem;
    border-radius:14px;
    margin:1.6rem 0;
  `}
  class={`text-${type}`}
>
  <strong>{icon} {title}</strong>
  <div style="margin-top:.5rem">
    <slot />
  </div>
</div>
